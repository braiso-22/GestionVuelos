<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GestionVuelos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/verde</item><!--@color/purple_500-->
        <item name="colorPrimaryVariant">@color/verde_oscuro</item><!--purple_700-->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/azul_claro</item><!--teal_200-->
        <item name="colorSecondaryVariant">@color/verde_oscuro</item><!--teal_700-->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnSecondary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="splash" parent="Theme.GestionVuelos">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>